#!monit
set logfile /var/log/monit.log

check process nodejs with pidfile "/var/run/signal-k-server.pid"
    start program = "/etc/init.d/signal-k-server start"
    stop program  = "/etc/init.d/signal-k-server stop"
    if failed port 3000 protocol HTTP
        request /
        with timeout 10 seconds
        then restart
